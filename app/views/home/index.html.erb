<HTML>

<head>
	<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular.js"></script>
     <%= javascript_include_tag 'application' %>
</head>
	
	<body ng-app = "railsnews" ng-controller = "MainCtrl">

		<h1>Home</h1>
			<p>Find me in app/views/home/index.html.erb</p>
				<p>My name is Roger. Yay</p>

		<div ng-app>
			<input type="text" ng-model = "lol">
				<p>{{lol}}</p>
		</div>

		<div ng-repeat="post in posts | orderBy: '-votes'">
		<button ng-click="incrementUpvotes(post)">^</button>
		    {{post.title}} <b># of votes:</b> {{post.votes}}
		</div>

		<h2>Want to add your own post?</h2>

		<form ng-submit = "addPost()" name="add">
		  <input name ="blank" type = "text" ng-model ="title" ng-minlength ="1" required>
		  <br/>
		  <span ng-show="add.blank.$error.required">Please enter a title!</span>
		  <span ng-show="!add.blank.$error.required">
		  You're good</span>
		  <br/>
		  <button type="submit">Post</button>
		 </form>

		  <br/>
		  <br/>  

		  <button ng-click ="removePost()" type ="submit">Delete the latest item!</button>

	</body>
</HTML>

